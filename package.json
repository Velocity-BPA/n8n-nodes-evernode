{
  "name": "n8n-nodes-evernode",
  "version": "1.0.0",
  "description": "n8n community node for Evernode decentralized hosting network - interact with hosts, tenants, leases, HotPocket smart contracts, and the EVR token ecosystem",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "n8n-nodes",
    "evernode",
    "xrpl",
    "blockchain",
    "decentralized",
    "hosting",
    "hotpocket",
    "smart-contracts",
    "evr",
    "xahau",
    "web3",
    "automation"
  ],
  "license": "BUSL-1.1",
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-evernode",
  "author": {
    "name": "Velocity BPA",
    "email": "contact@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-evernode.git"
  },
  "bugs": {
    "url": "https://github.com/Velocity-BPA/n8n-nodes-evernode/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy:icons",
    "build:watch": "tsc --watch",
    "copy:icons": "cp -r icons dist/ 2>/dev/null || true",
    "dev": "npm run build && npm link",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "lint": "eslint nodes credentials --ext .ts",
    "lint:fix": "eslint nodes credentials --ext .ts --fix",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/EvernodeNetwork.credentials.js",
      "dist/credentials/XrplCredentials.credentials.js",
      "dist/credentials/HotPocket.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Evernode/Evernode.node.js",
      "dist/nodes/Evernode/EvernodeTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.0",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.27.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "dependencies": {
    "evernode-js-client": "^0.6.61",
    "xrpl": "^3.0.0",
    "axios": "^1.6.7",
    "ws": "^8.16.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
